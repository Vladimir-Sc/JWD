<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<File name="MyFile" fileName="./dodatno/logs/app.log">
			<PatternLayout>
				<Pattern>%d %p %c{1} [%t] %m%n</Pattern>
			</PatternLayout>
		</File>
	</Appenders>
	<Loggers>
		<Root level="all">	<!-- moze se menjati nivo logovanja fatal, error, warn, info, all -->
			<AppenderRef ref="Console" /> <!-- ref="MyFile" -->
		</Root>
	</Loggers>
</Configuration>